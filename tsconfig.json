{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node16", // âœ… FIXED: important for Tailwind + Vite
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": []
  },
  "include": ["**/*.ts", "**/*.tsx", "api", "src", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
